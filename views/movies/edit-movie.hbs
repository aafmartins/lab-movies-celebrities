<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}" method="post">

  <label for="">Title</label>
  <input type="text" name="title" placeholder="{{movie.title}}" />

  <br />
  <br />
  <label for=""> Genre </label>
  <input type="text" name="genre" placeholder="{{movie.genre}}" />

  <br />
  <br />
  <label for="">Plot</label>
  <input type="text" name="plot" placeholder="{{movie.plot}} " />

  {{!-- 
  <label for="">Cast</label>
  <input type="text" name="cast" placeholder="{{movie.cast}}" /> --}}
  <br />
  <br />
  <label for="cast">Cast</label>
  <select name="cast" multiple>
    <option disable selected value="">Select a cast member from the list</option>
    {{#each movie.cast}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <br />
  <br />
  <button type="submit">Save</button>

</form>